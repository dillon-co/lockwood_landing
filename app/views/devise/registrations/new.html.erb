<div class="d-flex flex-column justify-content-center">
  <div class="d-flex justify-content-center">
  <%= image_tag("LOCKWOOD_full_copy.png", :style => 'max-width: 1000px;') %>
</div>
  <div class="p-2">
    <h2>Please Sign Up For <strong>VIP ACCESS</strong> And Begin Receiving <u> <strong> Free Content And Promotional Giveaways</strong></u> in 2018</h2>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class=" form-control">
    <div class="d-flex justify-content-center">
      <div class="container w-75">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="fiel form-control-lg">
              <%= f.label :first_name %>*<br />
              <%= f.text_field :first_name, autofocus: true, class: 'form-control form-control-lg' %>
            </div>

            <div class="field form-control-lg">
              <%= f.label :last_name %>*<br />
              <%= f.text_field :last_name, autofocus: true, class: "form-control form-control-lg" %>
            </div>

            <div class="field form-control-lg">
              <%= f.label :suffix %><br />
              <%= f.select :suffix, User.suffixes.keys.to_a, class: 'form-control form-control-lg' %>
            </div>

            <div class="field form-control-lg">
              <%= f.label :email %>*<br />
              <%= f.email_field :email, autofocus: true, class: "form-control form-control-lg" %>
            </div>

            <div class="field form-control-lg">
              <%= f.label :password %>*
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <div class="field form-control-lg">
              <%= f.label :password_confirmation %>*<br />
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="field form-control-lg">
              <%= f.label :age_range %><br />
              <%= f.select :age_range, User.age_ranges.keys.to_a, class: 'form-control form-control-lg' %>
            </div>

            <div class="field form-control-lg">
              <%= f.label :country %><br />
              <%= f.text_field :country, autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <br>
            <div class="actions">

              <%= f.submit "Sign up", class: 'btn btn-primary' %>
            </div>

            <div class="container">

              <%= f.check_box :subscribed, checked: true %>
              I AGREE  to receiving notifications, content, and promotional emails from Lockwood LLC.
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
  </div>
</div>
